{
	"name": "queryr/replicator",
	"description": "CLI application for replicating Wikibase entities",
	"homepage": "https://github.com/JeroenDeDauw/Replicator",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=7.0.0",

		"ext-PDO": "*",
		"ext-pcntl": "*",

		"wikibase/data-model": "~4.0",
		"wikibase/data-model-serialization": "~2.0",
		"wikibase/internal-serialization": "~2.0",

		"queryr/entity-store": "~1.0",
		"queryr/term-store": "~1.0",
		"queryr/xml-dump-reader": "~0.1.1",

		"jeroen/batching-iterator": "~2.1",
		"jeroen/json-dump-reader": "~1.2",
		"jeroen/query-engine": "~0.5",

		"symfony/console": "~2.4",
		"monolog/monolog": "~1.11.0"
	},
	"require-dev": {
		"ext-pdo_sqlite": "*",

		"jeroen/wikibase-data-fixtures": "~1.0",
		"jeroen/json-dump-data": "~1.0",

		"whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
		"ockcyp/covers-validator": "~0.3.0",
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3"
	},
	"autoload": {
		"psr-4": {
			"Queryr\\Replicator\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.1.x-dev"
		}
	},
	"bin": [
		"replicator"
	],
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit",
			"vendor/bin/covers-validator"
		],
		"cs": [
			"composer phpcs"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/ text phpmd.xml"
		]
	}
}
